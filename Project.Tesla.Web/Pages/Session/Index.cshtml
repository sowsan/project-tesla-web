<table class="table">
    <thead>
        <tr>
         
            <th>
                @Html.DisplayNameFor(model => model.Session[0].Type)
            </th>
         
            <th>
                @Html.DisplayNameFor(model => model.Session[0].ActivityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session[0].ChildName)
