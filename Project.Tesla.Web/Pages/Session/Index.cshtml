                @Html.DisplayFor(modelItem => item.ActivityName)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.RewardGoal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityDuration)
            </td>
           
